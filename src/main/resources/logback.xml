<?xml version="1.0" encoding="UTF-8"?>
<configuration >
    <property name="home" value="logs" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %.-28t %class{0} - %msg%n</pattern>
        </layout>
    </appender>
    <appender name="log_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${home}/ytl-logs.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${home}/ytl-logs.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %.-28t %class{0} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>


    <root level="info">
        <appender-ref ref="log_appender" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>